<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="SekiroChecklist.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="Primary">#ea9525</Color>
            <Color x:Key="PrimaryDark">#ea9525</Color>
            <Color x:Key="Accent">#FFFFFF</Color>
            <Color x:Key="LightBackgroundColor">#000000</Color>
            <Color x:Key="DarkBackgroundColor">#000000</Color>
            <Color x:Key="MediumGrayTextColor">#FFFFFF</Color>
            <Color x:Key="LightTextColor">#FFFFFF</Color>
            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="#000000" />
                <Setter Property="BarTextColor" Value="{StaticResource Primary}" />
            </Style>
        </ResourceDictionary>
</Application.Resources>
</Application>